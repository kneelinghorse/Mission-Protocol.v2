{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "research.deep-research-technical Domain Fields",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "description": "Research initiative type (spike, prototype, discovery, etc.)"
    },
    "geminiDeepResearch": {
      "type": "object",
      "description": "Gemini Deep Research configuration for technical research.",
      "additionalProperties": false,
      "properties": {
        "tools": {
          "type": "object",
          "description": "Gemini API tool configuration for technical research.",
          "additionalProperties": false,
          "properties": {
            "googleSearch": {
              "type": "object",
              "description": "Google Search grounding tool for technical documentation and code.",
              "additionalProperties": false,
              "properties": {
                "enabled": { "type": "boolean" },
                "description": { "type": "string" },
                "focusAreas": { "type": "array", "items": { "type": "string" } },
                "notes": { "type": "string" }
              },
              "required": ["enabled"]
            },
            "fileSearch": {
              "type": "object",
              "description": "File Search (Managed RAG) for codebase and technical documentation.",
              "additionalProperties": false,
              "properties": {
                "enabled": { "type": "boolean" },
                "storeName": { "type": "string" },
                "description": { "type": "string" },
                "config": {
                  "type": "object",
                  "properties": {
                    "displayName": { "type": "string" },
                    "customMetadata": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "key": { "type": "string" },
                          "stringValue": { "type": "string" }
                        }
                      }
                    },
                    "chunkingConfig": { "type": ["object", "null"] }
                  }
                },
                "notes": { "type": "string" }
              },
              "required": ["enabled"]
            },
            "urlContext": {
              "type": "object",
              "description": "URL Context for deep technical documentation and code analysis.",
              "additionalProperties": false,
              "properties": {
                "enabled": { "type": "boolean" },
                "urls": { "type": "array", "items": { "type": "string" } },
                "description": { "type": "string" },
                "supportedFormats": { "type": "array", "items": { "type": "string" } },
                "notes": { "type": "string" }
              },
              "required": ["enabled"]
            }
          }
        },
        "geminiCli": {
          "type": "object",
          "description": "gemini-cli configuration for technical research workflows.",
          "additionalProperties": false,
          "properties": {
            "useCustomCommands": { "type": "boolean" },
            "customCommandPath": { "type": "string" },
            "commandDescription": { "type": "string" },
            "shellContextBlocks": { "type": "array", "items": { "type": "string" } },
            "codeAnalysisCommands": { "type": "array", "items": { "type": "string" } },
            "mcpServers": { "type": "array", "items": { "type": "string" } },
            "workflow": {
              "type": "object",
              "properties": {
                "depth": {
                  "type": "object",
                  "properties": {
                    "level": {
                      "type": "string",
                      "enum": ["quick", "standard", "comprehensive", "exhaustive"]
                    },
                    "maxSearchIterations": { "type": "integer", "minimum": 1 },
                    "requireMultipleSources": { "type": "boolean" },
                    "crossValidationRequired": { "type": "boolean" },
                    "requireCodeExamples": { "type": "boolean" },
                    "requireOfficialDocs": { "type": "boolean" }
                  },
                  "required": ["level"]
                },
                "breadth": {
                  "type": "object",
                  "properties": {
                    "scope": {
                      "type": "string",
                      "enum": ["narrow", "focused", "broad", "expansive"]
                    },
                    "maxTechnologiesPerQuery": { "type": "integer", "minimum": 1 },
                    "allowTechnologyExpansion": { "type": "boolean" },
                    "relatedTechnologiesThreshold": { "type": "number", "minimum": 0, "maximum": 1 },
                    "includeAlternatives": { "type": "boolean" }
                  },
                  "required": ["scope"]
                },
                "sources": {
                  "type": "object",
                  "properties": {
                    "preferredDomains": { "type": "array", "items": { "type": "string" } },
                    "excludedDomains": { "type": "array", "items": { "type": "string" } },
                    "requireRecentSources": { "type": "boolean" },
                    "minSourceCount": { "type": "integer", "minimum": 1 },
                    "maxSourceCount": { "type": "integer", "minimum": 1 },
                    "sourceTypes": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "enum": ["documentation", "code", "tutorial", "all"]
                      }
                    },
                    "requireOfficialDocumentation": { "type": "boolean" }
                  }
                },
                "citations": {
                  "type": "object",
                  "properties": {
                    "requireCitations": { "type": "boolean" },
                    "citationFormat": {
                      "type": "string",
                      "enum": ["markdown", "apa", "mla", "ieee"]
                    },
                    "includeGroundingMetadata": { "type": "boolean" },
                    "trackSearchQueries": { "type": "boolean" },
                    "includeCodeSnippets": { "type": "boolean" },
                    "requireVersionNumbers": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      },
      "required": ["tools"]
    },
    "researchObjectives": {
      "type": "array",
      "description": "Questions the research must answer",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "technologiesUnderInvestigation": {
      "type": "array",
      "description": "Technologies or patterns being evaluated",
      "items": {
        "type": "string"
      }
    },
    "evaluationCriteria": {
      "type": "array",
      "description": "Criteria to measure success of the research",
      "items": {
        "type": "string"
      }
    },
    "prototypeRequirements": {
      "type": "array",
      "description": "Prototype capabilities that must be demonstrated",
      "items": {
        "type": "string"
      }
    },
    "geminiTechnicalResearchPlan": {
      "type": "object",
      "description": "Gemini-enhanced technical research execution plan and tracking.",
      "additionalProperties": false,
      "properties": {
        "strategy": {
          "type": "object",
          "properties": {
            "approach": {
              "type": "string",
              "enum": ["comparative", "proof-of-concept", "performance-benchmark", "security-audit", "architecture-review"]
            },
            "primaryTool": {
              "type": "string",
              "enum": ["google_search", "file_search", "url_context", "hybrid"]
            },
            "toolSequence": { "type": "array", "items": { "type": "string" } },
            "focusAreas": { "type": "array", "items": { "type": "string" } }
          }
        },
        "queries": {
          "type": "object",
          "properties": {
            "initialQueries": { "type": "array", "items": { "type": "string" } },
            "followUpQueries": { "type": "array", "items": { "type": "string" } },
            "technicalFocus": { "type": "string" },
            "refinementStrategy": { "type": "string" }
          }
        },
        "execution": {
          "type": "object",
          "properties": {
            "searchQueriesExecuted": { "type": "array", "items": { "type": "string" } },
            "sourcesAnalyzed": { "type": "array", "items": { "type": "string" } },
            "toolsUsed": { "type": "array", "items": { "type": "string" } },
            "codeRepositoriesAnalyzed": { "type": "array", "items": { "type": "string" } },
            "documentationSitesAnalyzed": { "type": "array", "items": { "type": "string" } },
            "iterations": { "type": "array", "items": { "type": "object" } }
          }
        },
        "technicalEvidence": {
          "type": "object",
          "properties": {
            "codeExamples": { "type": "array", "items": { "type": "object" } },
            "apiSpecifications": { "type": "array", "items": { "type": "object" } },
            "performanceBenchmarks": { "type": "array", "items": { "type": "object" } },
            "securityConsiderations": { "type": "array", "items": { "type": "string" } },
            "integrationPatterns": { "type": "array", "items": { "type": "object" } }
          }
        }
      }
    },
    "structured_prompting": {
      "type": "object",
      "description": "Structured prompting guidance using R-C-T-F-C blocks, enhanced with Gemini Deep Research.",
      "properties": {
        "enabled": { "type": "boolean" },
        "role": { "type": "string", "minLength": 1 },
        "context": { "type": "string", "minLength": 1 },
        "task": { "type": "string", "minLength": 1 },
        "format": { "type": "string", "minLength": 1 },
        "constraints": { "type": "string", "minLength": 1 }
      },
      "required": ["enabled", "role", "context", "task", "format", "constraints"],
      "additionalProperties": false
    },
    "technicalResearchGuidance": {
      "type": "object",
      "description": "Gemini Deep Research best practices and guidance for technical research.",
      "additionalProperties": false,
      "properties": {
        "promptTemplates": {
          "type": "object",
          "properties": {
            "initialTechnicalResearch": { "type": "string" },
            "codeAnalysisResearch": { "type": "string" }
          }
        },
        "toolUsageGuidance": {
          "type": "object",
          "properties": {
            "googleSearch": { "type": "string" },
            "fileSearch": { "type": "string" },
            "urlContext": { "type": "string" }
          }
        },
        "workflowOptimization": {
          "type": "object",
          "properties": {
            "technicalResearchProcess": { "type": "string" },
            "qualityAssurance": { "type": "string" }
          }
        }
      }
    }
  },
  "required": [
    "type",
    "geminiDeepResearch",
    "researchObjectives"
  ],
  "additionalProperties": false
}

