{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Domain type identifier"
    },
    "title": {
      "type": "string",
      "description": "Title of the architecture decision (e.g., 'ADR 001: Use PostgreSQL for primary data store')"
    },
    "status": {
      "type": "string",
      "enum": ["Proposed", "Accepted", "Deprecated", "Superseded"],
      "description": "Current status of the decision"
    },
    "decision": {
      "type": "string",
      "description": "Clear statement of the decision being made"
    },
    "consequences": {
      "type": "array",
      "description": "Positive, negative, and neutral consequences of the decision",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["type", "title", "status", "decision", "consequences"],
  "additionalProperties": false
}
