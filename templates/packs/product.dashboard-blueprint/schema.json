{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Domain type identifier"
    },
    "dashboardTitle": {
      "type": "string",
      "description": "Title of the dashboard"
    },
    "audience": {
      "type": "string",
      "description": "Target audience for this dashboard"
    },
    "primaryGoal": {
      "type": "string",
      "description": "Main decision or question this dashboard helps answer"
    },
    "keyMetrics": {
      "type": "array",
      "description": "Key metrics displayed on the dashboard",
      "items": {
        "type": "object",
        "properties": {
          "metric": {
            "type": "string",
            "description": "Name of the metric"
          },
          "visualization": {
            "type": "string",
            "enum": ["Line chart", "Bar chart", "Number", "Table", ""],
            "description": "Type of visualization for this metric"
          },
          "context": {
            "type": "string",
            "description": "Context for interpreting the metric (e.g., 'Compare to last month', 'Track over time')"
          }
        },
        "required": ["metric", "visualization", "context"],
        "additionalProperties": false
      }
    },
    "filters": {
      "type": "array",
      "description": "Available filters for the dashboard",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["type", "dashboardTitle", "audience", "primaryGoal", "keyMetrics", "filters"],
  "additionalProperties": false
}
