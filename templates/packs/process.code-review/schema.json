{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Domain type identifier"
    },
    "pullRequest": {
      "type": "string",
      "description": "Link to the pull request being reviewed"
    },
    "checklist": {
      "type": "object",
      "description": "Structured checklist for code review",
      "properties": {
        "functionality": {
          "type": "array",
          "description": "Checks related to functionality correctness",
          "items": {
            "type": "object",
            "properties": {
              "question": {
                "type": "string",
                "description": "Review question"
              },
              "status": {
                "type": "string",
                "enum": ["Pass", "Fail", "N/A", ""],
                "description": "Review status"
              },
              "comment": {
                "type": "string",
                "description": "Additional comments or feedback"
              }
            },
            "required": ["question", "status", "comment"],
            "additionalProperties": false
          }
        },
        "readability": {
          "type": "array",
          "description": "Checks related to code readability",
          "items": {
            "type": "object",
            "properties": {
              "question": {
                "type": "string",
                "description": "Review question"
              },
              "status": {
                "type": "string",
                "enum": ["Pass", "Fail", "N/A", ""],
                "description": "Review status"
              },
              "comment": {
                "type": "string",
                "description": "Additional comments or feedback"
              }
            },
            "required": ["question", "status", "comment"],
            "additionalProperties": false
          }
        },
        "design": {
          "type": "array",
          "description": "Checks related to design patterns",
          "items": {
            "type": "object",
            "properties": {
              "question": {
                "type": "string",
                "description": "Review question"
              },
              "status": {
                "type": "string",
                "enum": ["Pass", "Fail", "N/A", ""],
                "description": "Review status"
              },
              "comment": {
                "type": "string",
                "description": "Additional comments or feedback"
              }
            },
            "required": ["question", "status", "comment"],
            "additionalProperties": false
          }
        },
        "performance": {
          "type": "array",
          "description": "Checks related to performance",
          "items": {
            "type": "object",
            "properties": {
              "question": {
                "type": "string",
                "description": "Review question"
              },
              "status": {
                "type": "string",
                "enum": ["Pass", "Fail", "N/A", ""],
                "description": "Review status"
              },
              "comment": {
                "type": "string",
                "description": "Additional comments or feedback"
              }
            },
            "required": ["question", "status", "comment"],
            "additionalProperties": false
          }
        },
        "security": {
          "type": "array",
          "description": "Checks related to security",
          "items": {
            "type": "object",
            "properties": {
              "question": {
                "type": "string",
                "description": "Review question"
              },
              "status": {
                "type": "string",
                "enum": ["Pass", "Fail", "N/A", ""],
                "description": "Review status"
              },
              "comment": {
                "type": "string",
                "description": "Additional comments or feedback"
              }
            },
            "required": ["question", "status", "comment"],
            "additionalProperties": false
          }
        },
        "testing": {
          "type": "array",
          "description": "Checks related to testing",
          "items": {
            "type": "object",
            "properties": {
              "question": {
                "type": "string",
                "description": "Review question"
              },
              "status": {
                "type": "string",
                "enum": ["Pass", "Fail", "N/A", ""],
                "description": "Review status"
              },
              "comment": {
                "type": "string",
                "description": "Additional comments or feedback"
              }
            },
            "required": ["question", "status", "comment"],
            "additionalProperties": false
          }
        },
        "documentation": {
          "type": "array",
          "description": "Checks related to documentation",
          "items": {
            "type": "object",
            "properties": {
              "question": {
                "type": "string",
                "description": "Review question"
              },
              "status": {
                "type": "string",
                "enum": ["Pass", "Fail", "N/A", ""],
                "description": "Review status"
              },
              "comment": {
                "type": "string",
                "description": "Additional comments or feedback"
              }
            },
            "required": ["question", "status", "comment"],
            "additionalProperties": false
          }
        }
      },
      "required": ["functionality", "readability", "design", "performance", "security", "testing", "documentation"],
      "additionalProperties": false
    },
    "structured_prompting": {
      "type": "object",
      "description": "Structured prompting guidance using R-C-T-F-C blocks",
      "properties": {
        "enabled": { "type": "boolean" },
        "role": { "type": "string", "minLength": 1 },
        "context": { "type": "string", "minLength": 1 },
        "task": { "type": "string", "minLength": 1 },
        "format": { "type": "string", "minLength": 1 },
        "constraints": { "type": "string", "minLength": 1 }
      },
      "required": ["enabled", "role", "context", "task", "format", "constraints"],
      "additionalProperties": false
    }
  },
  "required": ["type", "pullRequest", "checklist"],
  "additionalProperties": false
}
