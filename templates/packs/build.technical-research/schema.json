{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Research initiative type (spike, prototype, discovery, etc.)"
    },
    "researchObjectives": {
      "type": "array",
      "description": "Questions the research must answer",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "technologiesUnderInvestigation": {
      "type": "array",
      "description": "Technologies or patterns being evaluated",
      "items": {
        "type": "string"
      }
    },
    "evaluationCriteria": {
      "type": "array",
      "description": "Criteria to measure success of the research",
      "items": {
        "type": "string"
      }
    },
    "prototypeRequirements": {
      "type": "array",
      "description": "Prototype capabilities that must be demonstrated",
      "items": {
        "type": "string"
      }
    },
    "structured_prompting": {
      "type": "object",
      "description": "Structured prompting guidance using R-C-T-F-C blocks",
      "properties": {
        "enabled": { "type": "boolean" },
        "role": { "type": "string", "minLength": 1 },
        "context": { "type": "string", "minLength": 1 },
        "task": { "type": "string", "minLength": 1 },
        "format": { "type": "string", "minLength": 1 },
        "constraints": { "type": "string", "minLength": 1 }
      },
      "required": ["enabled", "role", "context", "task", "format", "constraints"],
      "additionalProperties": false
    }
  },
  "required": ["type", "researchObjectives"],
  "additionalProperties": false
}
