{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "session": {
      "type": "object",
      "properties": {
        "unit": { "type": "string", "const": "AI_session" },
        "sessionObjectives": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["unit", "sessionObjectives"],
      "additionalProperties": false
    },
    "problemStatement": { "type": "string" },
    "subMissions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "missionType": { "type": "string" },
          "objective": { "type": "string" },
          "assignee": { "type": "string" },
          "status": { "type": "string", "enum": ["Pending", "In-Progress", "Completed", "Blocked"] },
          "missionFile": { "type": "string" }
        },
        "required": ["missionType", "objective", "status"],
        "additionalProperties": false
      }
    },
    "tracking": {
      "type": "object",
      "properties": {
        "completedCount": { "type": "integer", "minimum": 0 },
        "total": { "type": "integer", "minimum": 1 },
        "notes": { "type": "string" }
      },
      "required": ["completedCount", "total"],
      "additionalProperties": false
    },
    "crossValidation": {
      "type": "object",
      "properties": {
        "contradictions": { "type": "array", "items": { "type": "string" } },
        "resolutions": { "type": "array", "items": { "type": "string" } }
      },
      "required": [],
      "additionalProperties": false
    },
    "synthesis": {
      "type": "object",
      "properties": {
        "keyFindings": { "type": "array", "items": { "type": "string" } },
        "risksAndUnknowns": { "type": "array", "items": { "type": "string" } },
        "evidenceChain": {
          "type": "object",
          "properties": {
            "sourceRefs": { "type": "array", "items": { "type": "string" } },
            "verificationNotes": { "type": "string" }
          },
          "required": ["sourceRefs"],
          "additionalProperties": false
        }
      },
      "required": ["keyFindings", "evidenceChain"],
      "additionalProperties": false
    },
    "decisionGate": {
      "type": "object",
      "properties": {
        "outcome": { "type": "string", "enum": ["Proceed", "Stop", "Refine"] },
        "justification": { "type": "string" },
        "reviewer": { "type": "string" },
        "reviewedAt": { "type": "string" }
      },
      "required": ["outcome", "justification"],
      "additionalProperties": false
    }
  },
  "required": ["session", "problemStatement", "subMissions", "synthesis", "decisionGate"],
  "additionalProperties": false
}
